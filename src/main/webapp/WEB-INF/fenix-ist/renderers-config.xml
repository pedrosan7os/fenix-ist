     Currently there is a semi-hack built in the RendererPlugin to accept this format.
-->
<!DOCTYPE renderers-config SYSTEM "../fenix-renderers-config.dtd">

<renderers-config>
    <!--@ Tag Renderers -->
    
    <renderer type="java.util.Collection" layout="tag-count" class="org.fenixedu.academic.ui.renderers.TagCountRenderer">
        <property name="moduleRelative" value="true"/>
        <property name="contextRelative" value="true"/>
        <property name="separator" value="|"/>
    </renderer>

    <renderer type="java.util.Collection" layout="tag-cloud" class="org.fenixedu.academic.ui.renderers.TagCloudRenderer">
        <property name="moduleRelative" value="true"/>
        <property name="contextRelative" value="true"/>
        <property name="numberOfLevels" value="6"/>
    </renderer>
    

    <renderer type="java.util.Collection" layout="tag-search" class="org.fenixedu.academic.ui.renderers.AdvancedTagCloudSearchRenderer">
        <property name="moduleRelative" value="true"/>
        <property name="contextRelative" value="true"/>
        <property name="numberOfLevels" value="6"/>
        <property name="parameter" value="tags"/>
        <property name="selectedTagClass" value="tcloudselected"/>
        <property name="nearByTagClass" value="tcloudnearBy"/>
    </renderer>

    <renderer mode="input" type="java.lang.String" layout="tag-cloud" class="org.fenixedu.academic.ui.renderers.TagInputCloudRenderer">
        <property name="textClasses" value="smalltxt color888"/>
    </renderer>
</renderers-config>